{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "baseUrl": "./src",
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@app/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
